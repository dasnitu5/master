pipeline {
    agent any
	 environment {
                JIRA_HOME = 'C:/Atlassian/home'
                }
    stages {
       	stage('jira-installation') {
		steps {
                powershell'''
                new-item C:/Atlassian -itemtype directory 
                new-item C:/Atlassian/home -itemtype directory
				unzip  -d 
				Expand-Archive -LiteralPath //10.87.1.186/apps/Applications/IBM Rational/Jira_Automation/atlassian-jira-software-8.2.1.zip -DestinationPath C:/Atlassian
                '''
            }
        }
        stage('launch-jira') {
            steps {
                bat 'C:\\Atlassian\\jira\\bin\\start-jira.bat'
            }
		}
	}
}
